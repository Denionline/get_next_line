# **************************************************************************** #
#                                    Colors                                    #
# **************************************************************************** #

C_STD = \033[0;39m
C_GRAY = \033[0;90m
C_RED = \033[0;91m
C_GREEN = \033[0;92m
C_YELLOW = \033[0;93m
C_BLUE = \033[0;94m
C_MAGENTA = \033[0;95m
C_CYAN = \033[0;96m
C_WHITE = \033[0;97m

# **************************************************************************** #
#                                    Names                                     #
# **************************************************************************** #

ARQUIVE		= get_next_line.a

# **************************************************************************** #
#                                    Path's                                    #
# **************************************************************************** #

SRC_PATH	=	src/
INC_PATH	=	include/
FILES		=	get_next_line
FILES		+=	get_next_line_utils

SRCS		=	$(addprefix $(SRC_PATH), $(addsuffix .c, $(FILES)))
OBJS		=	$(addprefix $(SRC_PATH), $(addsuffix .o, $(FILES)))

# **************************************************************************** #
#                                  Compiler                                    #
# **************************************************************************** #

CC			=	cc
CFLAGS		=	-Wall -Wextra -Werror
AR			=	ar rcs
MAKE		=	make --no-print-directory

# **************************************************************************** #
#                                    Comands                                   #
# **************************************************************************** #

all: $(ARQUIVE)

$(ARQUIVE): $(OBJS)
	@$(AR) $(ARQUIVE) $(OBJS)
	@printf "\n$(C_GREEN)Success to created the arquive $(C_STD)$(ARQUIVE)\n\n"

%.o: %.c
	@$(CC) $(CFLAGS) -I $(INC_PATH) -c $< -o $@
	@printf "Compiling $(C_YELLOW)$<$(C_STD)...\n"

clean:
	@rm -rf $(OBJS)

fclean: clean
	@rm -rf $(ARQUIVE)

re: fclean all