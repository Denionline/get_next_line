# **************************************************************************** #
#                                    Names                                     #
# **************************************************************************** #

NAME		= getnextline.a

FILES			+= get_next_line.c
FILES			+= get_next_line_utils.c

SRC			= $(addprefix ./, $(FILES))
OBJS		= $(SRC:%.c=%.o)

# **************************************************************************** #
#                                     Compiler                                 #
# **************************************************************************** #

cc			= cc
CFLAGS		= -Wall -Wextra -Werror

# **************************************************************************** #
#                                     Comands                                  #
# **************************************************************************** #

RM			= rm -rf
AR			= ar rcs

# **************************************************************************** #
#                                      Rules                                   #
# **************************************************************************** #

.PHONY: all clean fclean re

all: $(NAME)

bonus: all

$(NAME): $(OBJS)
	@$(AR) $(NAME) $(OBJS)

%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@

m:
	@clear
	@$(CC) main.c $(NAME)
	@./a.out
	@$(RM) a.out

val:
	@clear
	@$(CC) main.c $(NAME)
	@valgrind ./a.out
	@$(RM) a.out

clean:
	@$(RM) $(OBJS)

fclean: clean
	@$(RM) $(NAME)

re: fclean all
